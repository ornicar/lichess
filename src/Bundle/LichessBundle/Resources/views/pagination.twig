{% if pager.pageCount %}
    {% if pager.first and pager.first != pager.current %}
    <a class="first" href="{{ url }}?page={{ pager.first }}">{% trans "First" %}</a>
    {% else %}
    <span class="first">{% trans "First" %}</span>
    {% endif %} |
    {% if pager.previous %}
    <a class="previous" href="{{ url }}?page={{ pager.previous }}">{% trans "Previous" %}</a>
    {% else %}
    <span class="previous">{% trans "Previous" %}</span>
    {% endif %} |
    {% for page in pager.pagesInRange %}
        {% if page == pager.current %}
            <span class="current">{{ page }}</span>
        {% else %}
            <a href="{{ url }}?page={{ page }}">{{ page }}</a>
        {% endif %} |
    {% endfor %}
    {% if pager.next %}
    <a class="next" href="{{ url }}?page={{ pager.next }}">{% trans "Next" %}</a>
    {% else %}
    <span class="next">{% trans "Next" %}</span>
    {% endif %}
{% endif %}
